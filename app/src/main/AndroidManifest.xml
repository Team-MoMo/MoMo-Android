<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.momo_android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_momo_appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_momo_appicon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoMo_Android"
        android:usesCleartextTraffic="true">
        <activity android:name=".onboarding.ui.OnboardingWriteActivity"></activity>

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />


        <activity android:name=".setting.ui.OpenSourceDetailActivity"/>
        <activity android:name=".setting.ui.OpenSourceActivity" />
        <activity android:name=".setting.ui.TermsOfServiceActivity" />
        <activity android:name=".setting.ui.PrivacyPolicyActivity" />
        <activity android:name=".setting.ui.ChangePasswordActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".lock.ui.LockOnActivity" />
        <activity android:name=".lock.ui.LockOffActivity" />
        <activity android:name=".setting.ui.MyInfoActivity" />
        <activity android:name=".setting.ui.TeamInfoActivity" />
        <activity android:name=".onboarding.ui.OnboardingWriteSecondActivity" />
        <activity android:name=".onboarding.ui.OnboardingWriteFirstActivity" />
        <activity android:name=".onboarding.ui.OnboardingDepthActivity" />
        <activity android:name=".onboarding.ui.OnboardingSentenceActivity" />
        <activity android:name=".onboarding.ui.OnboardingFeelingActivity" />
        <activity android:name=".onboarding.ui.OnboardingStartActivity" />
        <activity
            android:name=".login.ui.FindPasswordActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".login.ui.MainLoginActivity" />
        <activity
            android:name=".diary.ui.DiaryEditWriteActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".signup.ui.SignUpActivity" />
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/Theme.splashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.ui.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".home.ui.HomeActivity" />
        <activity android:name=".diary.ui.DiaryActivity" />
        <activity android:name=".diary.ui.DiaryEditDeepActivity" />
        <activity
            android:name=".upload.ui.UploadWriteActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".upload.ui.UploadSentenceActivity" />
        <activity android:name=".upload.ui.UploadFeelingActivity" />
        <activity android:name=".upload.ui.UploadDeepActivity" />
        <activity
            android:name=".list.ui.ListActivity"
            android:theme="@style/Theme.listTheme" />
        <activity android:name=".list.ui.ReportActivity" />
        <activity android:name=".setting.ui.SettingActivity" />
    </application>

</manifest>