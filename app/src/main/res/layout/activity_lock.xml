<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_6"
    tools:context=".lock.ui.LockOnActivity">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/notosanskrregular"
        android:includeFontPadding="false"
        android:letterSpacing="-0.06"
        android:text="암호 잠금"
        android:textColor="@color/black_2_nav"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/btn_close_black"
        app:layout_constraintBottom_toBottomOf="@+id/textView_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_title" />

    <ImageView
        android:id="@+id/imageView_lock"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_pw_change"
        app:layout_constraintBottom_toTopOf="@+id/textView_description"
        app:layout_constraintEnd_toEndOf="@+id/textView_description"
        app:layout_constraintStart_toStartOf="@+id/textView_description" />

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/notosanskrregular"
        android:includeFontPadding="false"
        android:letterSpacing="-0.06"
        android:text="다시 한 번 입력해 주세요."
        android:textColor="@color/black_3_list"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_passCodeOval_03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_wrongPassCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/notosanskrregular"
        android:includeFontPadding="false"
        android:letterSpacing="-0.06"
        android:text="현재 암호와 달라요!"
        android:textColor="@color/coral"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_passCodeOval_03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_passCodeOval_01"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="212dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/pass_code_oval"
        app:layout_constraintEnd_toStartOf="@id/imageView_passCodeOval_02"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title" />

    <ImageView
        android:id="@+id/imageView_passCodeOval_02"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/pass_code_oval"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_passCodeOval_01"
        app:layout_constraintEnd_toStartOf="@id/imageView_passCodeOval_03"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/imageView_passCodeOval_01"
        app:layout_constraintTop_toTopOf="@+id/imageView_passCodeOval_01" />

    <ImageView
        android:id="@+id/imageView_passCodeOval_03"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/pass_code_oval"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_passCodeOval_02"
        app:layout_constraintEnd_toStartOf="@id/imageView_passCodeOval_04"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/imageView_passCodeOval_02"
        app:layout_constraintTop_toTopOf="@+id/imageView_passCodeOval_02" />

    <ImageView
        android:id="@+id/imageView_passCodeOval_04"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/pass_code_oval"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_passCodeOval_03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/imageView_passCodeOval_03"
        app:layout_constraintTop_toTopOf="@+id/imageView_passCodeOval_03" />

    <Button
        android:id="@+id/button_01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/notosanskrregular"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="1"
        android:textColor="@color/black_1"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_02"
        app:layout_constraintEnd_toStartOf="@id/button_02"
        app:layout_constraintStart_toStartOf="@+id/button_04"
        app:layout_constraintTop_toTopOf="@+id/button_02" />

    <Button
        android:id="@+id/button_02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/notosanskrregular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="2"
        android:textColor="@color/black_1"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_03"
        app:layout_constraintEnd_toStartOf="@id/button_03"
        app:layout_constraintStart_toEndOf="@+id/button_01"
        app:layout_constraintTop_toTopOf="@+id/button_03" />

    <Button
        android:id="@+id/button_03"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/notosanskrregular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="3"
        android:textColor="@color/black_1"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/button_06"
        app:layout_constraintDimensionRatio="1.4:1"
        app:layout_constraintEnd_toEndOf="@+id/button_06"
        app:layout_constraintStart_toEndOf="@+id/button_02" />

    <Button
        android:id="@+id/button_04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/notosanskrregular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="4"
        android:textColor="@color/black_1"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@id/button_05"
        app:layout_constraintEnd_toStartOf="@id/button_05"
        app:layout_constraintStart_toStartOf="@+id/button_07"
        app:layout_constraintTop_toTopOf="@id/button_05" />

    <Button
        android:id="@+id/button_05"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/notosanskrregular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="5"
        android:textColor="@color/black_1"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_06"
        app:layout_constraintEnd_toStartOf="@id/button_06"
        app:layout_constraintStart_toEndOf="@+id/button_04"
        app:layout_constraintTop_toTopOf="@id/button_06" />

    <Button
        android:id="@+id/button_06"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/notosanskrregular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="6"
        android:textColor="@color/black_1"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@id/button_09"
        app:layout_constraintDimensionRatio="1.4:1"
        app:layout_constraintEnd_toEndOf="@+id/button_09"
        app:layout_constraintStart_toEndOf="@+id/button_05" />

    <Button
        android:id="@+id/button_07"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/notosanskrregular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="7"
        android:textColor="@color/black_1"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@id/button_08"
        app:layout_constraintEnd_toStartOf="@id/button_08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_08" />

    <Button
        android:id="@+id/button_08"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/notosanskrregular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="8"
        android:textColor="@color/black_1"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_09"
        app:layout_constraintEnd_toStartOf="@id/button_09"
        app:layout_constraintStart_toEndOf="@+id/button_07"
        app:layout_constraintTop_toTopOf="@id/button_09" />

    <Button
        android:id="@+id/button_09"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/notosanskrregular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="9"
        android:textColor="@color/black_1"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_delete"
        app:layout_constraintDimensionRatio="1.4:1"
        app:layout_constraintEnd_toEndOf="@id/imageButton_delete"
        app:layout_constraintStart_toEndOf="@+id/button_08" />

    <Button
        android:id="@+id/button_00"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/notosanskrregular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:stateListAnimator="@null"
        android:text="0"
        android:textColor="@color/black_1"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton_delete"
        app:layout_constraintEnd_toStartOf="@id/imageButton_delete"
        app:layout_constraintStart_toStartOf="@+id/button_08"
        app:layout_constraintTop_toTopOf="@id/imageButton_delete" />

    <ImageButton
        android:id="@+id/imageButton_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/btn_lock_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.4:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_00" />

</androidx.constraintlayout.widget.ConstraintLayout>