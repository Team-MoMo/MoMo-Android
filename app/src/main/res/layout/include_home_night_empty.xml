<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:background="@color/dark_blue_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/notosanskrmedium"
        android:includeFontPadding="false"
        android:letterSpacing="-0.06"
        android:text="2021년 \n1월 16일 토요일"
        android:textColor="@color/blue_7"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_my"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/btn_ic_my"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_diaryEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/notosanskrregular"
        android:includeFontPadding="false"
        android:letterSpacing="-0.07"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/blue_7"
        android:textSize="14dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/textView_date"
        app:layout_constraintTop_toBottomOf="@+id/textView_date"
        android:text="오늘 작성한 일기가 없습니다. \n새로운 책 속의 문장을 만나러 가볼까요?" />

    <Button
        android:id="@+id/button_upload"
        android:layout_width="81dp"
        android:layout_height="24dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/button_rectangle_radius8"
        android:backgroundTint="@color/blue_1"
        android:fontFamily="@font/notosanskrregular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="-0.08"
        android:lineSpacingExtra="0sp"
        android:stateListAnimator="@null"
        android:text="일기 작성하기"
        android:textColor="@color/blue_7"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/textView_diaryEmpty"
        app:layout_constraintTop_toBottomOf="@+id/textView_diaryEmpty" />

    <ImageView
        android:id="@+id/imageView_swipeDown"
        android:layout_width="36dp"
        android:layout_height="26dp"
        android:background="@drawable/home_ic_swipe_down"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_list"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/home_btn_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>